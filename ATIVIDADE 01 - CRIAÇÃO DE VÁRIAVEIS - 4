import java.util.Scanner;

public class Atividade4 {
    public static void main(String[] args) {
        // Declaração e inicialização das variáveis para representar informações sobre os produtos

        // Teclado
        String nomeTeclado = "Teclado Mecânico Gamer Redragon Lakshmi K606R";
        String catTeclado = "Periféricos";
        double precoTeclado = 149.99;
        int quantidadeTeclados = 20;

        // Mouse
        String nomeMouse = "Mouse Gamer Redragon Cobra";
        String catMouse = "Periféricos";
        double precoMouse = 199.99;
        int quantidadeMouse = 15;

        // Fone
        String nomeFone = "Fone Gamer Redragon H220 Themis Led";
        String catFone = "Periféricos";
        double precoFone = 245.73;
        int quantidadeFone = 5;

        Scanner sc = new Scanner(System.in);

        System.out.println("A loja oferece três tipos de periféricos: digite 1 para teclado, 2 para mouse e 3 para fone.");
        int cod = sc.nextInt();
        if (cod == 1) {
            System.out.println("O "+ nomeTeclado + " está por R$" + precoTeclado);
            System.out.println("Catergoria"+ catTeclado);
            System.out.println("Em estoque " + quantidadeTeclados);
        } else if (cod == 2) {
            System.out.println("O "+ nomeMouse +" está por R$" + precoMouse);
            System.out.println("Catergoria"+ catMouse);
            System.out.println("Em estoque: "+ quantidadeMouse);
        } else if (cod == 3) {
            System.out.println("O "+ nomeFone + "está por R$" + precoFone);
            System.out.println("Catergoria"+ catFone);
            System.out.println("Em estoque: "+ quantidadeFone);
        }  else{
            System.out.println("Você digitou o codigo errado");
        }
        sc.close();
    }


}
