public class Carro {
    private String marca;
    private String modelo;
    private String cor;
    private int ano;

    public Carro(String marca, String modelo, String cor, int ano) {
        this.marca = marca;
        this.modelo = modelo;
        this.cor = cor;
        this.ano = ano;
    }

    public String getMarca() {
        return marca;
    }
    public void setMarca(String marca) {
        this.marca = marca;
    }
    public String getModelo() {
        return modelo;
    }
    public void setModelo(String modelo) {
        this.modelo = modelo;
    }
    public String getCor() {
        return cor;
    }
    public void setCor(String cor) {
        this.cor = cor;
    }
    public int getAno() {
        return ano;
    }
    public void setAno(int ano) {
        this.ano = ano;
    }

    public void Informacao() {
        System.out.println("Marca: " + marca);
        System.out.println("Modelo: " + modelo);
        System.out.println("Cor: " + cor);
        System.out.println("Ano: " + ano);
}

class Main {
    public static void main(String[] args) {
        // Criando objetos da classe Carro
        Carro carro1 = new Carro("Toyota", "Corolla", "Prata", 2020);
        Carro carro2 = new Carro("Honda", "Civic", "Azul", 2020);

        // Exibindo as informações dos carros
        System.out.println("Carro 1:");
        carro1.Informacao();
        System.out.println();

        System.out.println("Carro 2:");
        carro2.Informacao();
        System.out.println();

        // Modificando as informações do carro1
        carro1.setAno(2022);
        carro1.setCor("Branco");

        // Exibindo as informações atualizadas do carro1
        System.out.println("Carro 1 (após modificação):");
        carro1.Informacao();
    }
}
